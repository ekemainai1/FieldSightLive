# ============================================
# FieldSightLive Frontend Environment Variables
# ============================================

# API & WebSocket URLs
NEXT_PUBLIC_API_URL=http://localhost:8080
NEXT_PUBLIC_WS_URL=ws://localhost:8080

# Authentication
NEXT_PUBLIC_AUTH_REQUIRED=false
NEXT_PUBLIC_WS_AUTH_TOKEN=

# Firebase Web SDK config (required for auth panel)
# Get these from Firebase Console > Project Settings > Your Apps
NEXT_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=123456789
NEXT_PUBLIC_FIREBASE_APP_ID=1:123456789:web:abcdef123456

# Optional defaults used by Setup/inspection start flow
NEXT_PUBLIC_DEFAULT_TECHNICIAN_ID=
NEXT_PUBLIC_DEFAULT_SITE_ID=
